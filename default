server {
  location / {
    root /data/www;
  }
  location ~ ^/download($|./*) {
    rewrite ^/download(.*)$ $1 break;
    proxy_pass http://192.168.1.237:6789;
    proxy_redirect     off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
  location ~ ^/tv($|./*) {
    proxy_pass http://192.168.1.237:8989;
    proxy_redirect     off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
  location ~ ^/movie($|./*) {
    proxy_pass http://192.168.1.237:5050;
    proxy_redirect     off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
  location ~ ^/play($|./*) {
    return 301 http://192.168.1.238:32400/web/;
  }

}
